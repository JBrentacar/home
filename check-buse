  <script>
    var currentPage = 1;
    var totalPages = 6;
    
    function showPage(page) {
      var pages = document.getElementsByClassName("page");
      for (var i = 0; i < pages.length; i++) {
        pages[i].style.display = "none";
      }
      document.getElementById("page" + page).style.display = "block";
      updateProgress(page);
    }
    
    function updateProgress(page) {
      var percentage = (page / totalPages) * 100;
      document.getElementById("progress-bar").style.width = percentage + "%";
      document.getElementById("progress-text").innerText = "ステップ " + page + " / " + totalPages;
    }
    
    function nextPage() {
      if (currentPage < totalPages) {
        currentPage++;
        showPage(currentPage);
      } else {
        // 最終ページの場合、指定URLへリダイレクト
        window.location.href = "https://www.seikatsujyouhoukan.co.jp/%E3%81%94%E5%88%A9%E7%94%A8%E3%81%AB%E3%81%82%E3%81%9F%E3%82%8A%E6%B3%A8%E6%84%8F%E4%BA%8B%E9%A0%85";
      }
    }
    
    function openModal(modalId) {
      document.getElementById(modalId).style.display = "block";
    }
    
    function closeModal(modalId) {
      document.getElementById(modalId).style.display = "none";
    }
    
    window.onclick = function(event) {
      var modals = document.getElementsByClassName("modal");
      for (var i = 0; i < modals.length; i++) {
        if (event.target == modals[i]) {
          modals[i].style.display = "none";
        }
      }
    }
    
    window.onload = function() {
      showPage(currentPage);
    }
  </script>
</body>
